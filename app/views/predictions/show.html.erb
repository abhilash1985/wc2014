<%- model_class = Prediction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:daily_challenges_user_id) %>:</strong></dt>
  <dd><%= @prediction.daily_challenges_user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:match_id) %>:</strong></dt>
  <dd><%= @prediction.match_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_a_score) %>:</strong></dt>
  <dd><%= @prediction.team_a_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_b_score) %>:</strong></dt>
  <dd><%= @prediction.team_b_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:result) %>:</strong></dt>
  <dd><%= @prediction.result %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @prediction.points %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              predictions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prediction_path(@prediction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              prediction_path(@prediction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
